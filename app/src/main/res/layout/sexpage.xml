<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/sex1"
                android:text="성별 현황 "
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"

                android:layout_width="fill_parent"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/result45"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_below="@id/sex1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:id="@+id/linebase10"
                android:layout_width="415dp"
                android:layout_below="@id/result45"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="1.0dp"
                android:background="#D9D9D9" />


            <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:id="@+id/sximage"
                android:background="@drawable/sex1"
            android:layout_marginTop="5dp"
            android:layout_below="@id/linebase10"/>

            <View
                android:id="@+id/linebase110"
                android:layout_width="415dp"
                android:layout_below="@id/sximage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_height="1.0dp"
                android:background="#D9D9D9" />

            <Button
                android:id="@+id/sxlist"
                android:text="성별"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:background="#EAEAEA"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_below="@+id/linebase110"></Button>

            <Button
                android:id="@+id/result48"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist"
                android:layout_marginStart="13dp">
            </Button>

            <Button
                android:id="@+id/sxlist2"
                android:text="확진자"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_red_light"
                android:background="#EAEAEA"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_below="@+id/result48"></Button>

            <Button
                android:id="@+id/result47"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_light"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist2"
                android:layout_marginStart="13dp">
            </Button>

            <Button
                android:id="@+id/sxlist3"
                android:text="사망자"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:background="#EAEAEA"
                android:textColor="#0054FF"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_below="@+id/result47"></Button>

            <Button
                android:id="@+id/result46"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0054FF"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist3"
                android:layout_marginStart="13dp">
            </Button>

            <Button
                android:id="@+id/sxlist4"
                android:text="성별"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:background="#EAEAEA"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="218dp"
                android:layout_below="@+id/linebase110"></Button>

            <Button
                android:id="@+id/result49"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist4"
                android:layout_marginStart="218dp">
            </Button>

            <Button
                android:id="@+id/sxlist5"
                android:text="확진자"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_red_light"
                android:background="#EAEAEA"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="218dp"
                android:layout_below="@+id/result48"></Button>

            <Button
                android:id="@+id/result50"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_light"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist5"
                android:layout_marginStart="218dp">
            </Button>

            <Button
                android:id="@+id/sxlist6"
                android:text="사망자"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:background="#EAEAEA"
                android:textColor="#0054FF"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="218dp"
                android:layout_below="@+id/result47"></Button>

            <Button
                android:id="@+id/result51"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0054FF"
                android:background="#EAEAEA"
                android:textStyle="bold"
                android:layout_below="@+id/sxlist6"
                android:layout_marginStart="218dp">
            </Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/result46">
            </Space>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>