<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/junbuk1"
                android:text="대전 현황 "
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:gravity="center"

                android:layout_width="fill_parent"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/result14"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#002266"
                android:layout_below="@id/junbuk1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:id="@+id/linebase3"
                android:layout_width="380dp"
                android:layout_below="@id/result14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="1.0dp"
                android:background="#D9D9D9" />


            <ImageView
                android:id="@+id/jbimage"
                android:layout_width="240dp"
                android:layout_height="500dp"
                android:layout_below="@id/linebase3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                android:background="@drawable/deajun1"></ImageView>

            <View
                android:layout_width="1dp"
                android:layout_height="500dp"
                android:layout_below="@id/linebase3"
                android:layout_toRightOf="@id/jbimage"
                android:background="#D9D9D9"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp">
            </View>

            <View
                android:layout_width="1dp"
                android:layout_height="500dp"
                android:layout_below="@id/linebase3"
                android:layout_toRightOf="@id/linebase4"
                android:background="#D9D9D9"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">

            </View>
            <TextView
                android:id="@+id/textj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linebase3"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="67dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="지역">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result8"
                android:textSize="30dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="58dp"
                android:layout_below="@+id/textj"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/linebase4"
                android:layout_width="115dp"
                android:layout_below="@id/result8"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="5dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="25dp"
                android:background="#D9D9D9" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textj2"
                android:layout_below="@+id/result8"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="21dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="48dp"
                android:text="확진자 수"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result9"
                android:textSize="30dp"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="60dp"
                android:layout_below="@+id/textj2"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/linebase5"
                android:layout_width="115dp"
                android:layout_below="@id/result9"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="5dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="25dp"
                android:background="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textj3"
                android:layout_below="@+id/result9"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="21dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="58dp"
                android:text="격리중"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result10"
                android:textSize="30dp"
                android:textColor="#F2CB61"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="70dp"
                android:layout_below="@+id/textj3"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/linebase6"
                android:layout_width="115dp"
                android:layout_below="@id/result10"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="5dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="25dp"
                android:background="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textj4"
                android:layout_below="@+id/result10"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="21dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="49dp"
                android:text="격리해제"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result11"
                android:textSize="30dp"
                android:textColor="#0054FF"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="58dp"
                android:layout_below="@+id/textj4"
                android:textStyle="bold"></TextView>


            <View
                android:id="@+id/linebase7"
                android:layout_width="115dp"
                android:layout_below="@id/result11"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="5dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="25dp"
                android:background="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textj5"
                android:layout_below="@+id/result11"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginStart="66dp"
                android:text="사망자"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result12"
                android:textSize="15dp"
                android:textColor="#8041D9"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="78dp"
                android:layout_below="@+id/textj5"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textj6"
                android:layout_below="@+id/result12"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginStart="54dp"
                android:text="해외 유입자"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/result13"
                android:textSize="15dp"
                android:textColor="#8041D9"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/jbimage"
                android:layout_marginStart="78dp"
                android:layout_below="@+id/textj6"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/linebase8"
                android:layout_width="115dp"
                android:layout_below="@id/result13"
                android:layout_toRightOf="@+id/jbimage"
                android:layout_marginTop="5dp"
                android:layout_height="0.7dp"
                android:layout_marginStart="28dp"
                android:background="#D9D9D9" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>